<!DOCTYPE html>
<html lang="en">
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<!-- Website CSS style -->
	<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
	<link href="https://fonts.googleapis.com/css?family=Pacifico&subset=latin-ext,vietnamese" rel="stylesheet">
	<!-- Website Font style -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
	<link rel="stylesheet" href="css/product.css">
	<!-- Google Fonts -->
	<link href="https://fonts.googleapis.com/css?family=Quicksand:300,400,500,700&subset=latin-ext,vietnamese" rel="stylesheet">

	<title>Product Shop Responsive </title>
</head>
<body>
<div class="container">
	<h4>Jace's SHOP COLLECTION</h4>
	<div class="row">

		<!-- BEGIN PRODUCTS -->
		{{#each products}}
		<div class="col-md-3 col-sm-6">
    		<span class="thumbnail">
      			<img src="images/item-4-180x200.png" alt="{{description}}">
      			<h3>{{name}}</h3>
      			<p>{{description}}</p>
				<p class="price">￦ {{formatPrice}}</p>
      			<hr class="line">
      			<div class="row">
      				<div class="col-md-6 col-sm-6">
						<div class="input-group">
							<div class="input-group-btn">
								<button type="button" class="btn btn-default dev-plus-button" aria-label="Plus">
									<span class="glyphicon glyphicon-plus"></span>
								</button>
							</div>
							<input type="number" class="form-control dev-order-quantity" readonly="readonly" value="0">
							<div class="input-group-btn">
								<button type="button" class="btn btn-default dev-minus-button" aria-label="Minus">
									<span class="glyphicon glyphicon-minus"></span>
								</button>
							</div>
						</div>
      				</div>
      				<div class="col-md-6 col-sm-6">
      					<button class="btn btn-info right dev-cart-button"> ADD ITEM</button>
      				</div>

      			</div>
    		</span>
		</div>
		{{/each}}

		<!-- END PRODUCTS -->
	</div>
</div><!-------container----->

<footer>
	<div class="navbar navbar-fixed-bottom">
		<div class="container">
			<div class="pull-left">abb</div>
			<div class="pull-right">
				<a class="btn btn-primary btn-lg dev-order-button" href="#" style="margin-top: 15px;">
					<span class="glyphicon glyphicon-shopping-cart" style="font-size: xx-large"></span>
					Buy Now <br/>
					<span class="small">&nbsp;</span><br/>
				</a>
			</div>
		</div>
	</div>
</footer>

<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<!-- Include all compiled plugins (below), or include individual files as needed -->
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>

<script src="js/jquery-ui-1.10.3.custom.min.js" type="text/javascript"></script>
<script src="js/jquery.mousewheel.min.js" type="text/javascript"></script>
<script src="js/jquery.kinetic.min.js" type="text/javascript"></script>
<script src="js/jquery.smoothdivscroll-1.3-min.js" type="text/javascript"></script>
<script>
	$( document ).ready(function() {
		$('.dev-cart-button').click(function() {
			var $quantity = $(this).parentsUntil('.thumbnail').find('.dev-order-quantity');
			var currentQuantity = $quantity.val() === '' ? 0 : Number($quantity.val());
			if (currentQuantity === 0) {
				alert('주문수량을 입력해 주세요');
				return;
			}

			console.log($quantity.val());
		});

		$('.dev-plus-button').click(function() {
			var $quantity = $(this).parent().next();
			console.log('q : ' + $quantity.val());
			var currentQuantity = $quantity.val() === '' ? 0 : Number($quantity.val());
			console.log('currentQuantity : ' + currentQuantity);
			$quantity.val(currentQuantity + 1);
		});

		$('.dev-minus-button').click(function() {
			var $quantity = $(this).parent().prev();
			console.log('q : ' + $quantity.val());
			var currentQuantity = $quantity.val() === '' ? 0 : Number($quantity.val());
			if (currentQuantity > 0) {
				console.log('currentQuantity : ' + currentQuantity);
				$quantity.val(currentQuantity - 1);
			}
		});

		$('.dev-order-button').click(function() {
			alert('안팔아요.');
		});

	});
</script>
</body>
</html>